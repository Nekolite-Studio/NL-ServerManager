{
  "name": "manager",
  "version": "0.1.0",
  "description": "GUI Management Console for Minecraft Servers",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm:watch:css\" \"npm:watch:preload\" \"electron . --disable-gpu\"",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/output.css",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./dist/output.css --watch",
    "build:preload": "esbuild preload.js --bundle --platform=node --external:electron --outfile=dist/preload.js",
    "watch:preload": "npm-watch build:preload",
    "build": "npm run build:preload && npm run build:css && electron-builder --linux"
  },
  "watch": {
    "watch:css": {
      "patterns": [
        "src",
        "index.html",
        "renderer.js",
        "renderer-ui.js"
      ],
      "extensions": "css,js,html"
    },
    "build:preload": {
      "patterns": [
        "preload.js"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "concurrently": "^8.2.2",
    "electron": "^39.2.4",
    "electron-builder": "^26.3.2",
    "esbuild": "^0.27.0",
    "npm-watch": "^0.13.0",
    "tailwindcss": "^4.1.17",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.example.servermanager",
    "productName": "ServerManager",
    "files": [
      "main.js",
      "index.html",
      "dist/"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "@nl-server-manager/common": "1.0.0",
    "axios": "^1.13.2",
    "electron-store": "^8.1.0",
    "zod": "^4.1.13"
  }
}
