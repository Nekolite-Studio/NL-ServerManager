{
  "name": "manager",
  "version": "0.1.0",
  "descri    tion": "GUI Management Console for Minecraft Servers",
  "author": {
    "name": "makkiilikecat",
    "email": "contact@makkii.jp"
  },
  "homepage": "https://github.com/Nekolite-Studio/NL-ServerManager",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm:watch:css\" \"npm:watch:preload\" \"electron . --disable-gpu\"",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/output.css",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./dist/output.css --watch",
    "build:preload": "esbuild preload.js --bundle --platform=node --external:electron --outfile=dist/preload.js",
    "watch:preload": "npm-watch build:preload",
    
    "build": "concurrently \"npm run build:preload\" \"npm run build:css\" && electron-builder -wl",

    "// CI Scripts": "-------------------------------------------------------",
    "// Note 1": "Artifacts用: 高速化のため圧縮なし(store)。Windowsのみビルド",
    "ci:artifact:win": "concurrently \"npm run build:preload\" \"npm run build:css\" && electron-builder --win --config.win.target=portable --config.compression=store",
    
    "// Note 2": "Releases用: サイズ削減のため最大圧縮(maximum)。全OSビルド",
    "ci:release:linux": "concurrently \"npm run build:preload\" \"npm run build:css\" && electron-builder --linux --config.compression=maximum",
    "ci:release:win": "concurrently \"npm run build:preload\" \"npm run build:css\" && electron-builder --win --config.compression=maximum",
    "ci:release:mac": "concurrently \"npm run build:preload\" \"npm run build:css\" && electron-builder --mac --config.compression=maximum"
  },
  "watch": {
    "watch:css": {
      "patterns": [
        "src",
        "index.html",
        "renderer.js",
        "renderer-ui.js"
      ],
      "extensions": "css,js,html"
    },
    "build:preload": {
      "patterns": [
        "preload.js"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "concurrently": "^8.2.2",
    "electron": "39.2.4",
    "electron-builder": "^26.3.2",
    "esbuild": "^0.27.0",
    "npm-watch": "^0.13.0",
    "tailwindcss": "^4.1.17",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "jp.makkii.nl-servermanager",
    "productName": "ServerManager",
    "directories": {
      "output": "../releases/manager"
    },
    "files": [
      "main.js",
      "index.html",
      "dist/",
      "src/"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "dependencies": {
    "@nl-server-manager/common": "1.0.0",
    "axios": "^1.13.2",
    "electron-store": "^8.1.0",
    "zod": "^4.1.13"
  }
}
