{
  "name": "agent",
  "version": "0.1.0",
  "description": "Server agent to be controlled by the manager",
  "type": "module",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "build": "pkg . --targets node18-linux-x64,node18-macos-x64,node18-win-x64",
    "build:win": "pkg . --targets node18-win-x64",
    "build:linux": "pkg . --targets node18-linux-x64",
    "build:mac": "pkg . --targets node18-macos-x64"
  },
  "pkg": {
    "assets": [
      "node_modules/systeminformation/prebuilds/**/*"
    ],
    "outputPath": "../releases/agent"
  },
  "dependencies": {
    "@nl-server-manager/common": "1.0.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "pidusage": "^4.0.1",
    "rcon-client": "^4.2.5",
    "systeminformation": "^5.27.11",
    "tar": "^7.5.2",
    "unzipper": "^0.12.3",
    "ws": "^8.18.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}

