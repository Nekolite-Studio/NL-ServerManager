{
  "name": "server-manager-monorepo",
  "private": true,
  "workspaces": [
    "manager",
    "agent"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:manager\" \"npm:dev:agent\"",
    "dev:manager": "npm run dev -w manager --inspect=9220",
    "dev:agent": "npm run dev -w agent --inspect=9221",
    "build": "npm run build -ws"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}